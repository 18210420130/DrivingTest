<layout>
   <data>
      <variable
          name="controller"
          type="com.liyahong.testdriving.controllers.TestFragmentController"/>
   </data>

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:orientation="vertical"
       tools:context="com.liyahong.testdriving.fragments.TestFragment">

      <android.support.design.widget.TabLayout
          android:id="@+id/test_fragment_tabLayout"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:background="#27408b"
          app:tabTextColor="#ffffff"
          app:tabSelectedTextColor="#ff3030"
          android:layout_weight="1">

      </android.support.design.widget.TabLayout>

      <android.support.v4.view.ViewPager
          android:id="@+id/test_fragment_viewPager"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="8">

      </android.support.v4.view.ViewPager>

   </LinearLayout>

</layout>
